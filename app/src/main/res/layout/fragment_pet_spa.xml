<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mocatto.fragments.PetSPAFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="466dp"
        android:background="@color/colorWhite"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="241dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_selec_foto"
                android:id="@+id/ivImagen"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/frecuencia_del_banio"
                android:id="@+id/lbFrecuenciaBanio"
                android:textAlignment="gravity"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtFrecuenciaBanio"
                android:layout_alignParentLeft="true"
                style="@style/edittext_style"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lastBath"
                android:id="@+id/lbFechaUltimoBanio"
                android:textAlignment="gravity"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:editable="false"
                android:focusable="false"
                android:id="@+id/txtFechaUltimoBanio"
                style="@style/edit_text_calendar_menu_style" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bathLocation"
                android:id="@+id/lbDondeBanio"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spDondeBanio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/spinner_style"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/quieres_que_te_recordemos"
                android:id="@+id/lbOtros"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spOtros"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/spinner_style"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/event"
                android:id="@+id/lbEvento"
                android:textAlignment="gravity"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/txtEvento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/edittext_style"
                android:visibility="gone"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/regularity"
                android:id="@+id/lbCadaCuanto"
                android:textAlignment="gravity"
                style="@style/textview_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:visibility="gone"
                android:id="@+id/txtCadaCuanto"
                android:inputType="text"
                android:layout_alignParentLeft="true"
                style="@style/edittext_style"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/layout_espacio_horiz1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="end"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nextRegister4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finalizar"
                    style="@style/textview_style_next" />

                <LinearLayout
                    android:id="@+id/layout_espacio_horiz2"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"
                    android:id="@+id/ivNext1"
                    android:layout_toRightOf="@id/nextRegister1"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_espacio_next1"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/layout_espacio_next11"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/layout_espacio_next111"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/layout_espacio_next1111"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/layout_espacio_next11111"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:orientation="vertical"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:baselineAligned="true"
        android:gravity="bottom|center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:id="@+id/linearLayout">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer"/>
    </LinearLayout>

</RelativeLayout>
