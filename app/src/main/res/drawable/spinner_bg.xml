<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/abc_secondary_text_material_light"/>
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/>
                    <padding android:bottom="2dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item >
                <bitmap android:gravity="right" android:layout_gravity="center" android:src="@drawable/ic_spinner" />
            </item>
        </layer-list>
    </item>
</selector>